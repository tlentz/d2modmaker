#!/bin/bash
D2ModMakerMode="production"
VERSION=`cat VERSION.txt`

cd cmd/d2modmaker

# macOS
GOOS=darwin GOARCH=amd64 go build -ldflags "-X 'main.mode=$D2ModMakerMode' -X 'main.version=$VERSION'" -o d2modmaker-mac *.go

# linux
GOOS=linux GOARCH=amd64 go build -ldflags "-X 'main.mode=$D2ModMakerMode' -X 'main.version=$VERSION'" -o d2modmaker-linux *.go

# windows
GOOS=windows GOARCH=amd64 go build -ldflags "-X 'main.mode=$D2ModMakerMode' -X 'main.version=$VERSION'" -o d2modmaker-windows.exe *.go

cd ../..

rm -rf ./dist/
mkdir -p ./dist/

mv cmd/d2modmaker/d2modmaker-mac ./dist/d2modmaker-mac
mv cmd/d2modmaker/d2modmaker-linux ./dist/d2modmaker-linux
mv cmd/d2modmaker/d2modmaker-windows.exe ./dist/d2modmaker-windows.exe

cp cfg.json ./dist/cfg.json
cp -r assets/113c-data/ ./dist/113c-data/
cp README.md ./dist/README.md